      if(parseInt(document.getElementById("extraVm").value) > 0){
        result = parseInt(document.getElementById("extraVm").value) - 1;
      }
      else{
        result=0;
        AddVm=0;
      }
      ExtraVm = result * 20;
      AddVm =result;
      calculate();
      setExtraVm()
    }
  }

