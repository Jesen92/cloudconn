      if (parseInt(document.getElementById("extraVm").value) < 30) {
        result = parseInt(document.getElementById("extraVm").value) + 1;
      }
      else {
        result = 30;
        AddVm = 30;
      }

      ExtraVm = result * 20;
      AddVm = result;
      calculate();
      setExtraVm()
    }
  }

  function extraVmMinus(){
    var result =0;
