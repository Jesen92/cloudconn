    var result = 0;
    if(document.getElementById("extraRam").disabled == false) {
      if(parseInt(document.getElementById("extraRam").value) < 30 ){
        result = parseInt(document.getElementById("extraRam").value) + 1;
      }
      else{
        result=30;
        AddSpace=30*100;
      }
      ExtraGb = result * 10;
      AddSpace =result * 100;
      calculate();
      setExtraStorage()
    }
